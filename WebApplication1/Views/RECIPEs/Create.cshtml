@model WebApplication1.Models.RECIPE

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Добавление ингредиента в рецепт</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Наименование ингредиента</label>
            <div class="col-md-10">
                @Html.DropDownList("C_id_ingred", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.C_id_ingred, "", new { @class = "text-danger" })
                <input type="button" onclick="location.href='../INGREDIENTs/Create'" value="Добавить ингредиент" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Наименование блюда</label>
            <div class="col-md-10">
                @Html.DropDownList("C_id_dish", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.C_id_dish, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Количество</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.kol, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.kol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
                <input type="button" onclick="location.href='../COOKING_STAGES/Create'" value="Добавить стадии рецепта" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
